<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.spring.Client">
        <constructor-arg type="java.lang.String" index="0" value="1"/>
        <constructor-arg type="java.lang.String" index="1" value="Oleksandr Roienko"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="event" class="com.spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

    <bean id="consoleEventLogger" class="com.spring.Logger.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="com.spring.Logger.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="test"/>
    </bean>
    <bean id="cacheFileEventLogger" class="com.spring.Logger.CacheFileEventLogger" destroy-method="destroy" init-method="init">
        <constructor-arg type="java.lang.String" value="test"/>
        <constructor-arg value="2"/>
    </bean>

    <bean id="app" class="com.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

</beans>
